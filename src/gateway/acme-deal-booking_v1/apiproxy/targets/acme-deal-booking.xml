<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<TargetEndpoint name="acme-deal-booking">
    <Description>Acme Deal Booking</Description>
	<FaultRules>
	</FaultRules>
	<DefaultFaultRule>
            <Step>
                <Name>SF-PostflowResponseTargetLogAggregator</Name>
            </Step>
		<Step>
            <Name>SF-Noname-Security</Name>
    	</Step>
    	<AlwaysEnforce>true</AlwaysEnforce>
	</DefaultFaultRule>
	<PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>SF-PreflowRequestTargetLogAggregator</Name>
            </Step>
            <Step>
                <Name>cf-Remove-Proxy-Auth-Header</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
	<Flows>
        <Flow name="getDeals">
        	<Condition>(targetOperation = &quot;getDeals&quot;)</Condition>
			<Request>
			</Request>   
			<Response>
			</Response>
        </Flow>
        <Flow name="bookTrade">
        	<Condition>(targetOperation = &quot;bookTrade&quot;)</Condition>
			<Request>
			</Request>   
			<Response>
			</Response>
        </Flow>
        <Flow name="closeTrade">
        	<Condition>(targetOperation = &quot;closeTrade&quot;)</Condition>
			<Request>
			</Request>   
			<Response>
			</Response>
        </Flow>
	</Flows>
    <PostFlow name="PostFlow">
        <Request>
            <Step>
                <Name>SF-PostflowRequestTargetLogAggregator</Name>
            </Step>
        </Request>
        <Response>
            <Step>
                <Name>SF-PostflowResponseTargetLogAggregator</Name>
            </Step>
        </Response>
    </PostFlow>
    <HTTPTargetConnection>
    	<LoadBalancer>
            <Server name="Tonik-acme-deal-booking">
                <IsEnabled>true</IsEnabled>
            </Server>
        </LoadBalancer>
        <Path>{targetBasePath}</Path>
    </HTTPTargetConnection>
</TargetEndpoint>
